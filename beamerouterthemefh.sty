\defbeamertemplate*{frametitle}{fh}[1][]
{
%\vspace*{-10pt}
  \begin{beamercolorbox}[wd=\paperwidth]{frametitle}

    \begin{tikzpicture}
      \useasboundingbox(0,0) rectangle(\the\paperwidth,1.1);
      \node[anchor=north west,font=\large, text width=\the\paperwidth*0.5] at (0,0.4){\usebeamerfont{frametitle}\insertframetitle};
    \end{tikzpicture}
  \end{beamercolorbox}
}


