}

\AtBeginSection{
  \ifbeamer@inframe
    \sectionpage
  \else
    \frame[plain,c,noframenumbering]{\sectionpage}
  \fi
}


\def\maketitle{%
  \ifbeamer@inframe
    \titlepage
  \else
    \frame[plain,noframenumbering]{\titlepage}
  \fi
}
\def\titlepage{%
  \usebeamertemplate{title page}
}
