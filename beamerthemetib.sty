\defbeamertemplate*{footline}{TIB}
{
	\begin{beamercolorbox}[leftskip=15pt,rightskip=15pt,ht=2.5ex,dp=1ex]{footline}
  	\usebeamerfont{footline}\TIB@footline\par
  	\vspace{2ex}
