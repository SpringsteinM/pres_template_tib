\setbeamertemplate{title page}{
	\begin{tikzpicture}[remember picture,overlay]

		%\useasboundingbox (0,0) rectangle (\the\paperwidth,\the\paperheight);
		\ifnum\thepage>1\relax%

		\else % Title page
			\node[at=(current page.north west),anchor=north west] (overlay) {
				\includegraphics[height=0.78\paperheight,width=0.6\paperwidth]{tib/overlay}};
			\node[at=(overlay.north east),anchor=north east,inner sep=1.5cm] (logo) {
				\includegraphics[width=0.2\paperwidth]{tib/logo}};
			\node[at=(overlay.north west),anchor=north west, inner sep=1.5cm] {
				\includegraphics[width=0.2\paperwidth]{tib/firm}};

			\node[at=(overlay.south west),anchor=south west](title){ \begin{beamercolorbox}{headline}\usebeamerfont{headline}\inserttitle\end{beamercolorbox}};
		\fi
	\end{tikzpicture}
}


